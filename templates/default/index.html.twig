{% extends 'base.html.twig' %}

{% block body %}


<main class="container">
  <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 fst-italic">{{ articles[0].title }}</h1>
      <p class="lead my-3">{{ articles[0].content|slice(0, 50) }}</p>
      <p class="lead mb-0"><a href="{{ path('app_article_show', {'id': articles[0].id}) }}" class="text-white fw-bold">Continue reading...</a></p>
    </div>
  </div>



                <div class="row mb-2">
                {% for article in articles %}
                    <div class="col-md-6">
                        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                            <div class="col p-4 d-flex flex-column position-static">
                                <strong class="d-inline-block mb-2 text-primary">World</strong>
                                <h3 class="mb-0">{{ article.title }}</h3>
                                <div class="mb-1 text-muted">{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</div>
                                <p class="card-text mb-auto">{{ article.content|slice(0, 30) }}</p>
                                <a class="btn btn-primary" href="{{ path('app_article_show', {'id': article.id}) }}" class="stretched-link">Continue reading</a>
                            </div>
                            <div class="col-auto d-none d-lg-block">
                            <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                


{% endblock %}
